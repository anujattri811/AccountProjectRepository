        @using (Html.BeginForm("client_view", "Admin", FormMethod.Get, new { enctype = "multipart/form-data" }))
        {
            <div class="col-md-12 row" style="margin-bottom:12px">
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.PersonName, PersonName, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <input type="hidden" name="ClientId" value="@ViewBag.ClientId" />
                    <select name="DocumentType" id="Document" class="form-control custom-control">
