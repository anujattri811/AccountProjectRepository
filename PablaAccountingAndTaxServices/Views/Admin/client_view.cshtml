            <div class="col-md-12">
                <div class="col-md-6">
                    <h3 class="card-title" style="color: white;padding-top:10px;padding-bottom: 10px;">Document Information</h3>

                </div>

            </div>
        </div>
        @using (Html.BeginForm("savedocuments", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "Savedocument" }))
        {

